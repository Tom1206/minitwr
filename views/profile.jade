doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Mini Twitter Projet ProgWeb L1 S2 2015')
    link(rel='shortcut icon', href='assets/ico/favicon.png')
    title Twitchers - Profile
    script(src='assets/js/jquery.min.js')
    // Bootstrap core CSS
    link(href='assets/css/bootstrap.css', rel='stylesheet')
    // Custom styles
    link(href='assets/css/style.css', rel='stylesheet')
  body
    // navbar
    #navigation.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='home')
            span.glyphicon.glyphicon-leaf
          a.navbar-brand(href='public/#{user._id}')
            | #{user.username}
        .navbar-collapse.collapse
          .col-sm-9.col-md-7.pull-left
            ul.nav.navbar-nav
              li
                form.navbar-form(role='search', action='/search', method='post', enctype='plain')
                  .input-group
                    input.form-control(type='text', placeholder='Search (profile, tweet, etc...)', name='research')
                    .input-group-btn
                      button.btn.btn-default(type='submit')
                        span.glyphicon.glyphicon-search

              li
                a(title='Home', href='/home')
                  span.glyphicon.glyphicon-home
              li
                a(title='Messages', href='/message')
                  span.glyphicon.glyphicon-envelope
              li
                a(title=' modify profile', href='/profile')
                  span.glyphicon.glyphicon-cog
              li
                a(title='LogOut', href='/signout')
                  span.glyphicon.glyphicon-off
    br
    br
    br
    br
    .container
      .row
        .col-md-12
          .col-md-6
            h1  #{user.username}
            hr
          .col-md-6
            img.img-responsive.img-rounded(src='./uploads/pictures/#{name_picture}', alt='Photo de profil !')
            form(action='/upload', enctype='multipart/form-data', method='post')
                input(type='file', name='upload', multiple='multiple')
                br
                input(type='submit', value='Upload')
                br
        .col-md-6
          h2 Update your informations
          br
          form(role='form', action='/profile', method='post', enctype='plain')
            .form-group
              form(role='form', action='/profile', method='post', enctype='plain')
                .form-group
                  label(for='nickname') Nickname
                  input#nickname.form-control(type='name', name='Nickname', value='#{user.username}')
                .form-group
                  label(for='email1') Mail
                  input#email1.form-control(type='email', name='Mail', value='#{user.email}')
                .form-group
                  label
                    script.
                      var user= !{JSON.stringify(user)};
                      if(user.sexe == "Male")
                      {
                        document.write('M ')
                        document.write('<input type="checkbox" name="sexe" value="Male" checked>');
                        document.write(' F ')
                        document.write('<input type="checkbox" name="sexe" value="Female">');
                      }
                      else if(user.sexe == "Female")
                      {
                        document.write('M ')
                        document.write('<input type="checkbox" name="sexe" value="Male">');
                        document.write(' F ')
                        document.write('<input type="checkbox" name="sexe" value="Female"  checked>');
                      }
                      else
                      {
                        document.write('M ')
                        document.write('<input type="checkbox" name="sexe" value="Male">');
                        document.write(' F ')
                        document.write('<input type="checkbox" name="sexe" value="Female">');
                      }
                label(for='country')  Country
                br
                select(type='pays', name='pays')
                  script.
                    var user= !{JSON.stringify(user)};
                    if (user.pays == "Deutschland")
                    {
                        document.write('<option value=""> </option>');
                        document.write('<option value="Deutschland", selected="selected"> Deutschland </option>');
                        document.write('<option value="France"> France </option>');
                        document.write('<option value="USA"> USA </option>');
                        document.write('<option value="PHPland"> PHPland </option>');
                        document.write('<option value="other"> other </option>');
                    }
                    else if (user.pays == "France")
                    {
                      document.write('<option value=""> </option>');
                      document.write('<option value="Deutschland"> Deutschland </option>');
                      document.write('<option value="France", selected="selected"> France </option>');
                      document.write('<option value="USA"> USA </option>');
                      document.write('<option value="PHPland"> PHPland </option>');
                      document.write('<option value="other"> other </option>');
                    }
                    else if (user.pays == "USA")
                    {
                      document.write('<option value=""> </option>');
                      document.write('<option value="Deutschland"> Deutschland </option>');
                      document.write('<option value="France""> France </option>');
                      document.write('<option value="USA", selected="selected"> USA </option>');
                      document.write('<option value="PHPland"> PHPland </option>');
                      document.write('<option value="other"> other </option>');
                    }
                    else if (user.pays == "PHPland")
                    {
                      document.write('<option value=""> </option>');
                      document.write('<option value="Deutschland"> Deutschland </option>');
                      document.write('<option value="France""> France </option>');
                      document.write('<option value="USA"> USA </option>');
                      document.write('<option value="PHPland", selected="selected"> PHPland </option>');
                      document.write('<option value="other"> other </option>');
                    }
                    else if (user.pays == "other")
                    {
                      document.write('<option value=""> </option>');
                      document.write('<option value="Deutschland"> Deutschland </option>');
                      document.write('<option value="France""> France </option>');
                      document.write('<option value="USA"> USA </option>');
                      document.write('<option value="PHPland"> PHPland </option>');
                      document.write('<option value="other", selected="selected"> other </option>');
                    }
                    else
                    {
                      document.write('<option value="", selected="selected"> </option>');
                      document.write('<option value="Deutschland"> Deutschland </option>');
                      document.write('<option value="France""> France </option>');
                      document.write('<option value="USA"> USA </option>');
                      document.write('<option value="PHPland"> PHPland </option>');
                      document.write('<option value="other"> other </option>');
                    }

                br
                br
                label(for='tellus')  Tell us more about you !
                br
                textarea(cols='80', rows='10', name='tellus') #{user.description}
                br
                br
                button.btn.btn-large.btn-success(type='submit') Submit !

  script(src='scripts.js')
  // Bootstrap core JavaScript
  script(src='assets/js/bootstrap.js')
